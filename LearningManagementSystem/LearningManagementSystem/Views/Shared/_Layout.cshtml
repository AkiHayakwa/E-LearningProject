<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - E-Learning System</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        html, body {
            height: 100%;
            margin: 0;
            font-family: 'Arial', sans-serif;
        }

        body {
            display: flex;
            flex-direction: column;
            background: #f8f9fa; /* Màu nền trắng xám nhạt */
            color: #333;
        }

        .navbar {
            background-color: #e3f2fd; /* Màu xanh nhạt cho navbar */
            border-bottom: 1px solid #d1e7ff;
        }

        .navbar-brand, .nav-link {
            color: #1a73e8 !important;
        }

            .nav-link:hover {
                color: #0056b3 !important;
            }

        .container {
            max-width: 1200px;
            flex: 1 0 auto; /* Đảm bảo container chiếm toàn bộ không gian còn lại */
        }

        footer {
            background-color: #e9ecef;
            color: #666;
            border-top: 1px solid #dee2e6;
            flex-shrink: 0; /* Ngăn footer bị co lại */
        }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-lg">
        <div class="container">
            <a class="navbar-brand" href="/">E-Learning</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item"><a class="nav-link" href="/Course/Index">Khóa học</a></li>
                    @if (User.Identity.IsAuthenticated)
                    {
                        <li class="nav-item"><a class="nav-link" href="/Enrollment/Index">Đã đăng ký</a></li>
                        if (User.IsInRole("Admin"))
                        {
                            <li class="nav-item"><a class="nav-link" href="/Admin/Index">Quản trị</a></li>
                        }
                        <li class="nav-item"><a class="nav-link" href="/Account/Logout">Đăng xuất</a></li>
                    }
                    else
                    {
                        <li class="nav-item"><a class="nav-link" href="/Account/Login">Đăng nhập</a></li>
                        <li class="nav-item"><a class="nav-link" href="/Account/Register">Đăng ký</a></li>
                    }
                </ul>
            </div>
        </div>
    </nav>

    <div class="container py-5">
        @RenderBody()
    </div>

    <footer class="text-center py-3">
        <p>© 2025 E-Learning System</p>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>