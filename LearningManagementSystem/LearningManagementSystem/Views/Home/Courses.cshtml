@model List<LearningManagementSystem.Models.Course>
@{
    Layout = "_Layout";
    ViewData["Title"] = "Danh sách khóa học - E-Learning System";
}

<style>
    .course-card {
        transition: transform 0.3s;
    }

        .course-card:hover {
            transform: translateY(-5px);
        }

    .section-title {
        color: #1a73e8;
        border-bottom: 2px solid #1a73e8;
        padding-bottom: 0.5rem;
        margin-bottom: 1.5rem;
    }
</style>

<h2 class="section-title">Danh sách khóa học</h2>

<div class="row">
    @foreach (var course in Model)
    {
        <div class="col-md-4 mb-4">
            <div class="card course-card shadow-sm">
                <div class="card-body">
                    <h5 class="card-title" style="color: #333;">@course.CourseName</h5>
                    <p class="card-text" style="color: #666;">@course.Description</p>
                    <p class="card-text"><small class="text-muted">Giảng viên: @course.Instructor.FullName</small></p>
                    <a href="@Url.Action("CourseDetails", "Home", new { courseId = course.CourseId })" class="btn btn-primary" style="background-color: #1a73e8; border: none;">Xem chi tiết</a>
                </div>
            </div>
        </div>
    }
</div>