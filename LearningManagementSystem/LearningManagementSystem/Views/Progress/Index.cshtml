@model LearningManagementSystem.Models.Course

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Tiến độ học tập - @Model.CourseName</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #f1f3f5;
        }

        .progress-table {
            border-radius: 10px;
            overflow: hidden;
        }

        .completed {
            background-color: #d4edda;
        }
    </style>
</head>
<body>
    <div class="container py-5">
        <!-- Header -->
        <div class="text-center mb-4">
            <h1 class="display-5 fw-bold">Tiến độ học tập</h1>
            <p class="lead">Khóa học: @Model.CourseName</p>
        </div>

        <!-- Bảng tiến độ -->
        <div class="card shadow-sm progress-table">
            <div class="card-body p-0">
                <table class="table table-hover mb-0">
                    <thead class="table-dark">
                        <tr>
                            <th scope="col">Bài học</th>
                            <th scope="col">Trạng thái</th>
                            <th scope="col">Ngày hoàn thành</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.Lessons != null && Model.Lessons.Any())
                        {
                            @foreach (var lesson in Model.Lessons)
                            {
                                var progress = ViewBag.Progress != null
                                ? ((IEnumerable<LearningManagementSystem.Models.Progress>)ViewBag.Progress)
                                .FirstOrDefault(p => p.LessonId == lesson.LessonId)
                                : null;
                                <tr class="@(progress?.CompletionStatus == true ? "completed" : "")">
                                    <td>@lesson.LessonTitle</td>
                                    <td>
                                        <span class="badge @(progress?.CompletionStatus == true ? "bg-success" : "bg-warning")">
                                            @(progress?.CompletionStatus == true ? "Hoàn thành" : "Chưa hoàn thành")
                                        </span>
                                    </td>
                                    <td>@(progress?.CompletionDate?.ToString("dd/MM/yyyy") ?? "Chưa có")</td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="3" class="text-center">Chưa có bài học nào trong khóa học này.</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <!-- Footer -->
    <footer class="text-center py-3 bg-light mt-5">
        <p>© 2025 Hệ thống E-learning. All rights reserved.</p>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>