@model IEnumerable<LearningManagementSystem.Models.User>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Quản lý người dùng</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #e9ecef;
        }

        .admin-table {
            border-radius: 10px;
            overflow: hidden;
        }

        .btn-custom {
            transition: all 0.3s;
        }

            .btn-custom:hover {
                transform: scale(1.05);
            }
    </style>
</head>
<body>
    <div class="container py-5">
        <!-- Header -->
        <div class="text-center mb-4">
            <h1 class="display-5 fw-bold">Quản lý người dùng</h1>
            <p class="lead">Quản trị viên - Quản lý tài khoản hệ thống</p>
        </div>

        <!-- Nút thêm người dùng -->
        <div class="mb-4 text-end">
            <a href="@Url.Action("CreateUser", "Admin")" class="btn btn-success btn-custom">Thêm người dùng mới</a>
        </div>

        <!-- Bảng danh sách người dùng -->
        <div class="card shadow admin-table">
            <div class="card-body p-0">
                <table class="table table-striped mb-0">
                    <thead class="table-dark">
                        <tr>
                            <th scope="col">Tên đăng nhập</th>
                            <th scope="col">Họ tên</th>
                            <th scope="col">Email</th>
                            <th scope="col">Vai trò</th>
                            <th scope="col">Hành động</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var user in Model)
                        {
                            <tr>
                                <td>@user.UserName</td>
                                <td>@user.FullName</td>
                                <td>@user.Email</td>
                                <td>
                                    <span class="badge bg-info">@user.Roles.RoleName</span>
                                </td>
                                <td>
                                    <a href="@Url.Action("EditUser", "Admin", new { id = user.UserId })" class="btn btn-primary btn-sm btn-custom me-2">Sửa</a>
                                    <a href="@Url.Action("DeleteUser", "Admin", new { id = user.UserId })" class="btn btn-danger btn-sm btn-custom">Xóa</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <!-- Footer -->
    <footer class="text-center py-3 bg-light mt-5">
        <p>&copy; 2025 Hệ thống E-learning. All rights reserved.</p>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>