@model LearningManagementSystem.Models.Lesson
@{
    Layout = "_Layout";
    ViewData["Title"] = "Thêm bài học";
}

<h1 class="text-center mb-4">Thêm bài học</h1>
<form asp-action="CreateLesson" method="post">
    <input type="hidden" asp-for="CourseId" value="@ViewBag.CourseId" />
    <div class="form-group">
        <label>Tiêu đề</label>
        <input asp-for="LessonTitle" class="form-control" required />
    </div>
    <div class="form-group">
        <label>Thứ tự</label>
        <input asp-for="OrderNumber" class="form-control" type="number" required />
    </div>
    <div class="form-group">
        <label>Nội dung</label>
        <textarea asp-for="Content" class="form-control" required></textarea>
    </div>
    <button type="submit" class="btn btn-primary mt-3">Thêm</button>
</form>