@model IEnumerable<LearningManagementSystem.Models.Course>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Quản lý khóa học</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #e9ecef;
        }

        .course-table {
            border-radius: 10px;
            overflow: hidden;
        }

        .btn-custom {
            transition: all 0.3s;
        }

            .btn-custom:hover {
                transform: scale(1.05);
            }
    </style>
</head>
<body>
    <div class="container py-5">
        <!-- Header -->
        <div class="text-center mb-4">
            <h1 class="display-5 fw-bold">Quản lý khóa học</h1>
            <p class="lead">Quản trị viên - Quản lý các khóa học trong hệ thống</p>
        </div>

        <!-- Nút thêm khóa học -->
        <div class="mb-4 text-end">
            <a href="@Url.Action("CreateCourse", "Admin")" class="btn btn-success btn-custom">Thêm khóa học mới</a>
        </div>

        <!-- Bảng danh sách khóa học -->
        <div class="card shadow course-table">  
            <div class="card-body p-0">
                <table class="table table-striped mb-0">
                    <thead class="table-dark">
                        <tr>
                            <th scope="col">Tên khóa học</th>
                            <th scope="col">Mô tả</th>
                            <th scope="col">Giảng viên</th>
                            <th scope="col">Ngày tạo</th>
                            <th scope="col">Hành động</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var course in Model)
                        {
                            <tr>
                                <td>@course.CourseName</td>
                                <td>@course.Description</td>
                                <td>@(course.Instructor?.FullName ?? "Chưa có")</td>
                                <td>@course.CreatedDate.ToString("dd/MM/yyyy")</td>
                                <td>
                                    <a href="@Url.Action("EditCourse", "Admin", new { id = course.CourseId })" class="btn btn-primary btn-sm btn-custom me-2">Sửa</a>
                                    <a href="@Url.Action("DeleteCourse", "Admin", new { id = course.CourseId })" class="btn btn-danger btn-sm btn-custom">Xóa</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <!-- Footer -->
    <footer class="text-center py-3 bg-light mt-5">
        <p>&copy; 2025 Hệ thống E-learning. All rights reserved.</p>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>